{
  "name": "WebsiteOne",
  "description": "A website for AgileVentures",
  "scripts":{
    "dokku":{
      "predeploy": "bundle exec rake db:migrate"
    },
      "postdeploy": "bundle exec rake db:setup"
  },
  "env": {
    "AGILE_BOT_URL": {
      "required": true
    },
    "AIRBRAKE_API_KEY": {
      "required": true
    },
    "AIRBRAKE_PROJECT_ID": {
      "required": true
    },
    "ENABLE_NOTIFICATIONS": {
      "required": true
    },
    "GITHUB_KEY": {
      "required": true
    },
    "GITHUB_SECRET": {
      "required": true
    },
    "GPLUS_KEY": {
      "required": true
    },
    "GPLUS_SECRET": {
      "required": true
    },
    "HANGOUTS_APP_ID": {
      "required": true
    },
    "MAX_THREADS": {
      "required": true
    },
    "PUMA_WORKERS": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    },
    "SLACK_AUTH_TOKEN": {
      "required": true
    },
    "SLACK_NOTIFICATIONS_ENABLED": {
      "required": true
    },
    "SLACK_INVITES_ENABLED": {
      "required": true
    },
    "STRIPE_PUBLISHABLE_KEY": {
      "required": true
    },
    "STRIPE_SECRET_KEY": {
      "required": true
    },
    "TWITTER_NOTIFICATIONS_ENABLED": {
      "required": true
    }
  }
}
